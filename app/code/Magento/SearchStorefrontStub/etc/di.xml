<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- configure elasticsearch overrides to avoid circular dependencies-->
    <type name="Magento\SearchStorefrontElasticsearch\Model\Adapter\FieldMapper\Product\AttributeAdapter">
        <arguments>
            <argument name="eavModelClass" xsi:type="string">Magento\Framework\DataObject</argument>
        </arguments>
    </type>

    <!-- Set aggregations to be built in the search request  -->
    <type name="Magento\SearchStorefrontSearch\Model\Search">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Stub\SearchRequestBuilder</argument>
        </arguments>
    </type>
    <virtualType name="Stub\SearchRequestBuilder" type="Magento\Framework\Search\Request\Builder">
        <arguments>
            <argument name="cleaner" xsi:type="object">Stub\SearchRequestCleaner</argument>
        </arguments>
    </virtualType>
    <virtualType name="Stub\SearchRequestCleaner" type="Magento\Framework\Search\Request\Cleaner">
        <arguments>
            <argument name="aggregationStatus" xsi:type="object">Magento\SearchStorefrontStub\Model\Aggregation\Status</argument>
        </arguments>
    </virtualType>

    <!-- Set scope resolvers independent from monolith -->
    <type name="Magento\SearchStorefront\DataProvider\Product\SearchCriteria\Builder\RequestTypeApplier">
        <arguments>
            <argument name="scopeConfig" xsi:type="object">Stub\ScopeConfigInterface</argument>
        </arguments>
    </type>
    <virtualType name="Stub\ScopeConfigInterface" type="Magento\Framework\App\Config">
        <arguments>
            <argument name="scopeCodeResolver" xsi:type="object">Stub\ScopeCodeResolver</argument>
        </arguments>
    </virtualType>
    <virtualType name="Stub\ScopeCodeResolver" type="Magento\Framework\App\Config\ScopeCodeResolver">
        <arguments>
            <argument name="scopeResolverPool" xsi:type="object">Stub\ScopeResolverPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Stub\ScopeResolverPool" type="Magento\Framework\App\ScopeResolverPool">
        <arguments>
            <argument name="scopeResolvers" xsi:type="array">
                <item name="default" xsi:type="object">\Magento\Framework\App\ScopeResolver</item>
                <item name="store" xsi:type="object">Magento\SearchStorefrontStore\Model\Scope\Resolver\Store</item>
                <item name="stores" xsi:type="object">Magento\SearchStorefrontStore\Model\Scope\Resolver\Store</item>
                <item name="website" xsi:type="object">Magento\SearchStorefrontStore\Model\Scope\Resolver\Website</item>
                <item name="websites" xsi:type="object">Magento\SearchStorefrontStore\Model\Scope\Resolver\Website</item>
            </argument>
        </arguments>
    </virtualType>


    <preference for="Magento\SearchStorefrontStub\Framework\Model\EngineResolverInterface" type="Magento\SearchStorefrontSearch\Model\EngineResolver"/>
</config>
